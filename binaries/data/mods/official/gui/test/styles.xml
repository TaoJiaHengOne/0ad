<styles>
	<!--
	==========================================
	- DEFAULT STYLE: The style with the name 'default' is special, it will
	- be called by every object before any other style is loaded.
	==========================================
	-->

	<style 	name="default"
		absolute="false"
		enabled="true"
		ghost="false"
		hidden="false"
		size="0 0 100% 100%"
		z="0"

		font="verdana12"
		buffer_zone="5"
		multiline="false"
	/>

	<!--
	==========================================
	- STYLE - GLOBAL - BEIGE MENU SKIN - PANES
	==========================================
	-->

